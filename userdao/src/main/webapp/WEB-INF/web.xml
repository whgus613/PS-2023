    <!--        <servlet-name>userServlet</servlet-name>-->
    <!--        <servlet-class>kr.ac.jejunu.user.UserServlet</servlet-class>-->
    <!--    </servlet>-->
    <servlet-mapping>
        <servlet-name>dispatcherServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
